@inherits Vibe.UI.Base.ThemedComponentBase

<div class="@CombinedClass" @attributes="AdditionalAttributes">
    @if (Header != null)
    {
        <div class="vibe-card-header">
            @Header
        </div>
    }
    
    <div class="vibe-card-content">
        @ChildContent
    </div>
    
    @if (Footer != null)
    {
        <div class="vibe-card-footer">
            @Footer
        </div>
    }
</div>

@code {
    /// <summary>
    /// Gets or sets the card content
    /// </summary>
    [Parameter]
    public RenderFragment ChildContent { get; set; }

    /// <summary>
    /// Gets or sets the card header
    /// </summary>
    [Parameter]
    public RenderFragment Header { get; set; }

    /// <summary>
    /// Gets or sets the card footer
    /// </summary>
    [Parameter]
    public RenderFragment Footer { get; set; }

    /// <inheritdoc/>
    protected override string ComponentClass => "vibe-card";
}