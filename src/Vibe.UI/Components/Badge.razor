@namespace VibeUI.Components
@inherits Base.ThemedComponentBase

<span class="@CombinedClass @VariantClass @SizeClass">
    @ChildContent
</span>

@code {
    /// <summary>
    /// Gets or sets the content of the badge.
    /// </summary>
    [Parameter]
    public RenderFragment ChildContent { get; set; }

    /// <summary>
    /// Gets or sets the variant of the badge.
    /// </summary>
    [Parameter]
    public string Variant { get; set; } = "default";

    /// <summary>
    /// Gets or sets the size of the badge.
    /// </summary>
    [Parameter]
    public string Size { get; set; } = "default";

    /// <summary>
    /// Gets the component CSS class name.
    /// </summary>
    protected override string ComponentClass => "vibe-badge";

    /// <summary>
    /// Gets the CSS class for the variant.
    /// </summary>
    private string VariantClass => $"vibe-badge-{Variant}";

    /// <summary>
    /// Gets the CSS class for the size.
    /// </summary>
    private string SizeClass => $"vibe-badge-{Size}";
}