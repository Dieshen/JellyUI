@namespace VibeUI.Components
@inherits Base.ThemedComponentBase

<label class="@CombinedClass" for="@For" @attributes="AdditionalAttributes">
    @ChildContent
    @if (Required)
    {
        <span class="required-indicator">*</span>
    }
</label>

@code {
    /// <summary>
    /// Gets or sets the ID of the associated form control.
    /// </summary>
    [Parameter]
    public string For { get; set; }

    /// <summary>
    /// Gets or sets the label content.
    /// </summary>
    [Parameter]
    public RenderFragment ChildContent { get; set; }

    /// <summary>
    /// Gets or sets whether the associated field is required.
    /// </summary>
    [Parameter]
    public bool Required { get; set; }

    /// <summary>
    /// Gets the component CSS class name.
    /// </summary>
    protected override string ComponentClass => "vibe-form-label";
}